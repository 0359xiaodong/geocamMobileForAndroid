<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout android:id="@+id/camera_preview_status_layout"
		android:orientation="horizontal"
		android:visibility="visible"
		android:gravity="top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView android:id="@+id/camera_preview_textview_focus"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:textColor="@color/solid_green" />

		<TextView android:id="@+id/camera_preview_textview_location"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content" 
   			android:textColor="@color/solid_green" />
   	</LinearLayout>
    
    <FrameLayout
    	android:layout_width="fill_parent"
		android:layout_height="0px"
		android:layout_weight="1">

        <SurfaceView android:id="@+id/camera_preview_surfaceview"
        	android:layout_width="fill_parent"
           	android:layout_height="fill_parent" />

		<LinearLayout android:id="@+id/camera_preview_control_layout"
			android:orientation="vertical"
			android:visibility="visible"
			android:gravity="center_vertical|right"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">

		    <ImageButton android:id="@+id/camera_preview_annotate_button" 
		    	android:layout_width="wrap_content" 
		    	android:layout_height="wrap_content">
			</ImageButton>
		    <ImageButton android:id="@+id/camera_preview_delete_button" 
		    	android:layout_width="wrap_content" 
		    	android:layout_height="wrap_content">
			</ImageButton>
			<ImageButton android:id="@+id/camera_preview_save_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
			</ImageButton>
		</LinearLayout>          
	</FrameLayout>            
</LinearLayout>
